<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns       	= "http://www.w3.org/ns/widgets"
        xmlns:gap   	= "http://phonegap.com/ns/1.0"
		xmlns:android   = "http://schemas.android.com/apk/res/android"
        id          	= "org.GPD.shouldIRun"
        versionCode 	= "10"
        version    		= "1.1.0">
 
    <name>ShouldIRun</name>
 
    <description>
        Should you run for your next appointment?
    </description>
 
    <author href="http://uva.nl/" email="AGP@justinpost.nl">
        Armoured Guinea Pig Developement
    </author>
	
	<gap:platform name="android" />
	
	<icon src="icon.png" />
	
	<config-file target="AndroidManifest.xml" parent="/manifest/application">
		<activity android:name="org.GPD.shouldIRun" android:label="@string/ShouldIRun">
			<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
			<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
		</activity>
	</config-file>
 
    <feature name="http://api.phonegap.com/1.0/camera"/>
    <feature name="http://api.phonegap.com/1.0/contacts"/>
    <feature name="http://api.phonegap.com/1.0/file"/>
    <feature name="http://api.phonegap.com/1.0/geolocation"/>
    <feature name="http://api.phonegap.com/1.0/media"/>
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/notification"/>
 
</widget>